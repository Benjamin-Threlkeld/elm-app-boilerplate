{
  "name": "elm-app-boilerplate",
  "version": "0.1.6",
  "description": "Elm application boilerplate",
  "scripts": {
    "~~~PUBLIC~~~": "",
    "start": "mkdir -p dist && npm-run-all -p 'watch:*' serve",
    "build": "mkdir -p dist && npm-run-all clean -p 'build:*'",
    "test": "elm-test test/TestRunner.elm",
    "tdd": "nodemon --watch 'src/' --watch 'test/' --ext elm --exec 'npm test'",
    "clean": "rm -rf dist .semantic",
    "elm-repl": "elm repl",
    "elm-package": "elm package",
    "version": "json -4 -I -f elm-package.json -e \"this.version='${npm_package_version}'\" && git add elm-package.json",
    "postversion": "git push && git push origin v${npm_package_version}",
    "postinstall": "elm package install -y",
    "serve": "mkdir -p dist && cd dist && browser-sync start --no-notify --no-ghost-mode --no-open --reload-delay 1000 --server --files 'themes/**/*, *.min.js, *.min.css, *.html'",
    "~~~WATCH~~~": "Rebuild app on code change",
    "watch:styles": "npm run build:styles && gulp watch",
    "watch:elm": "nodemon --watch 'src/' --ext elm --exec 'npm run build:elm'",
    "watch:js": "npm run build:js:vendor && nodemon --watch 'scripts/' --ext js --exec 'npm run build:js:app'",
    "watch:html": "nodemon --watch 'html/' --ext html --exec 'npm run build:html'",
    "~~~BUILD JAVASCRIPT~~~": "",
    "build:js": "npm-run-all -p 'build:js:*'",
    "build:js:app": "browserify -e scripts/main.js -t uglifyify --debug | exorcist dist/scripts.min.map > dist/scripts.min.js",
    "build:js:vendor": "npm-run-all -p 'build:js:vendor:*'",
    "build:js:vendor:jquery": "rsync --exclude '*slim*' node_modules/jquery/dist/jquery.* dist/",
    "postbuild:js:vendor:jquery": "echo '//# sourceMappingURL=jquery.min.map' >> dist/jquery.min.js",
    "~~~BUILD STYLES~~~": "Semantic UI",
    "build:styles": "gulp build",
    "~~~BUILD ELM~~~": "",
    "build:elm": "elm make src/Main.elm --output dist/elm.js --warn",
    "postbuild:elm": "cd dist && uglifyjs elm.js --screw-ie8 --compress 'warnings=false' --mangle --source-map elm.min.map --output elm.min.js",
    "~~~BUILD HTML~~~": "",
    "build:html": "html-minifier --config-file html-minifier.conf --output dist/index.html html/index.html"
  },
  "author": "Greg Kubisa <gkubisa@gmail.com>",
  "license": "MIT",
  "repository": "gkubisa/elm-app-boilerplate",
  "devDependencies": {
    "better-console": "^0.2.4",
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "del": "^2.2.0",
    "elm": "^0.16.0",
    "elm-test": "^0.16.0",
    "exorcist": "^0.4.0",
    "extend": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-chmod": "^1.3.0",
    "gulp-clone": "^1.0.0",
    "gulp-concat": "^2.6.0",
    "gulp-concat-css": "^2.2.0",
    "gulp-copy": "0.0.2",
    "gulp-dedupe": "0.0.2",
    "gulp-flatten": "^0.2.0",
    "gulp-header": "^1.7.1",
    "gulp-help": "^1.6.1",
    "gulp-if": "^2.0.0",
    "gulp-less": "^3.0.5",
    "gulp-minify-css": "^1.2.4",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-print": "^2.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-rtlcss": "^1.0.0",
    "gulp-uglify": "^1.5.3",
    "gulp-util": "^3.0.7",
    "gulp-watch": "^4.3.5",
    "html-minifier": "^1.4.0",
    "jquery": "^2.2.2",
    "json": "^9.0.3",
    "map-stream": "0.0.6",
    "nodemon": "^1.8.1",
    "npm-run-all": "^1.7.0",
    "require-dot-file": "^0.4.0",
    "run-sequence": "^1.1.5",
    "semantic-ui": "^2.1.8",
    "uglify-js": "^2.6.2",
    "uglifyify": "^3.0.1",
    "yamljs": "^0.2.6"
  }
}
