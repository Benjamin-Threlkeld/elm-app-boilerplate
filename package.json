{
  "name": "elm-app-boilerplate",
  "version": "0.1.5",
  "description": "Elm application boilerplate",
  "scripts": {
    "start": "parallelshell 'npm run watch-styles' 'npm run watch-elm' 'npm run watch-scripts' 'npm run watch-website-config' 'npm run watch-website' 'npm run browser-sync'",
    "build": "npm run clean && npm run styles && npm run elm && npm run scripts && npm run website",
    "test": "elm-test test/TestRunner.elm",
    "tdd": "nodemon --watch './src/' --watch './test/' --ext elm --exec 'npm test'",
    "clean": "rm -rf ./dist/ ./website/.cache",
    "version": "json -4 -I -f elm-package.json -e \"this.version='${npm_package_version}'\" && git add elm-package.json",
    "postversion": "git push && git push origin v${npm_package_version}",
    "elm-repl": "elm repl",
    "elm-package": "elm package",
    "postinstall": "elm package install -y && cd website && stack setup",
    "watch-styles": "npm run styles && gulp watch",
    "watch-elm": "nodemon --watch './src/' --ext elm --exec 'npm run elm'",
    "watch-scripts": "nodemon --watch './scripts/' --ext js --exec 'npm run scripts'",
    "watch-website-config": "nodemon --watch './website/' --ext hs --ignore '/.*' --exec 'npm run website'",
    "watch-website": "cd website && nodemon --watch '.' --ext rst,markdown,html,png,svg,jpg,gif --ignore '/.*' --on-change-only --exec 'stack exec site build'",
    "styles": "gulp build && rsync ./node_modules/jquery/dist/jquery*.js ./dist/",
    "elm": "elm make src/Main.elm --output ./dist/elm.js --warn",
    "postelm": "uglifyjs ./dist/elm.js --screw-ie8 --compress 'warnings=false' --mangle --output ./dist/elm.min.js",
    "prescripts": "mkdir -p dist",
    "scripts": "uglifyjs $(find ./scripts/ -type f -name '*.js') --screw-ie8 --beautify --output ./dist/scripts.js",
    "postscripts": "uglifyjs ./dist/scripts.js --screw-ie8 --compress --mangle --output ./dist/scripts.min.js",
    "website": "cd website && rm -rf .cache && stack build && stack exec site build",
    "prebrowser-sync": "mkdir -p dist",
    "browser-sync": "cd dist && browser-sync start --no-ghost-mode --no-open --reload-delay 250 --reload-debounce 2500 --server --files '**/*, !components/**/*'"
  },
  "author": "Greg Kubisa <gkubisa@gmail.com>",
  "license": "MIT",
  "repository": "gkubisa/elm-app-boilerplate",
  "devDependencies": {
    "better-console": "^0.2.4",
    "browser-sync": "^2.11.1",
    "del": "^2.2.0",
    "elm": "^0.16.0",
    "elm-test": "^0.16.0",
    "extend": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-chmod": "^1.3.0",
    "gulp-clone": "^1.0.0",
    "gulp-concat": "^2.6.0",
    "gulp-concat-css": "^2.2.0",
    "gulp-copy": "0.0.2",
    "gulp-dedupe": "0.0.2",
    "gulp-flatten": "^0.2.0",
    "gulp-header": "^1.7.1",
    "gulp-help": "^1.6.1",
    "gulp-if": "^2.0.0",
    "gulp-less": "^3.0.5",
    "gulp-minify-css": "^1.2.4",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-print": "^2.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-rtlcss": "^1.0.0",
    "gulp-uglify": "^1.5.3",
    "gulp-util": "^3.0.7",
    "gulp-watch": "^4.3.5",
    "jquery": "^2.2.2",
    "json": "^9.0.3",
    "map-stream": "0.0.6",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "require-dot-file": "^0.4.0",
    "run-sequence": "^1.1.5",
    "semantic-ui": "^2.1.8",
    "uglify-js": "^2.6.2",
    "yamljs": "^0.2.6"
  }
}
