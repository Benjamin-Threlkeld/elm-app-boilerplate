{
  "name": "elm-app-boilerplate",
  "version": "0.1.7",
  "description": "Elm application boilerplate",
  "scripts": {
    "start": "webpack-dev-server --hot --inline",
    "build": "npm run clean && webpack -p",
    "test": "elm-test test/TestRunner.elm",
    "tdd": "nodemon --watch 'src/' --watch 'test/' --ext elm --exec 'npm test'",
    "clean": "rm -rf dist",
    "elm-repl": "elm repl",
    "elm-package": "elm package",
    "elm-reactor": "elm reactor",
    "elm-make": "elm make",
    "elm-test": "elm test",
    "version": "json -4 -I -f elm-package.json -e \"this.version='${npm_package_version}'\" && git add elm-package.json",
    "postversion": "git push && git push origin v${npm_package_version}",
    "postinstall": "rsync -r node_modules/semantic-ui-less/themes node_modules/semantic-ui-less/definitions node_modules/semantic-ui-less/theme.less node_modules/semantic-ui-less/semantic.less styles/ && find styles -type f -exec chmod -x {} \\; && elm package install -y"
  },
  "author": "Greg Kubisa <gkubisa@gmail.com>",
  "license": "MIT",
  "repository": "gkubisa/elm-app-boilerplate",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "css-loader": "^0.23.1",
    "elm": "^0.16.0",
    "elm-hot-loader": "^0.2.2",
    "elm-test": "^0.16.0",
    "elm-webpack-loader": "^2.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^2.15.0",
    "jquery": "^2.2.2",
    "json": "^9.0.3",
    "less": "^2.6.1",
    "less-loader": "^2.2.3",
    "nodemon": "^1.8.1",
    "postcss-loader": "^0.8.2",
    "semantic-ui-less": "^2.1.8",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  }
}
